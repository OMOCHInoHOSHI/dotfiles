# zsh,bshの環境でも動く共通設定

# Gitリポジトリのルートディレクトリに移動する関数
function cdgitroot() {
  local root=$(git rev-parse --show-toplevel 2>/dev/null)
  if [ -n "$root" ]; then
    cd "$root"
  else
    echo "Error: Not a git repository."
  fi
}

# 短いコマンドでも動くようにエイリアスを設定
alias cdgr='cdgitroot'

# Git関連のエイリアス
alias gi='git'
alias sw='git switch'
alias co='git commit'
alias br='git branch'

# デフォルトのエディタをnvimにしたい
export EDITOR='nvim'
export VISUAL='nvim'
